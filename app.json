{
  "expo": {
    "name": "smart-edu-mobile-app",
    "slug": "smart-edu-mobile-app",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/accessstudy-logo.png",
    "userInterfaceStyle": "light",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#1e293b"
    },
    "ios": {
      "supportsTablet": true
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/accessstudy-logo.png",
        "backgroundColor": "#ffffff"
      },
      "edgeToEdgeEnabled": true
    },
    "web": {
      "bundler": "metro",
      "favicon": "./assets/accessstudy-logo.png"
    },
    "plugins": [
      "expo-video",
      "expo-audio"
    ]
  }
}
